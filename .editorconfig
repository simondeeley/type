# EditorConfig http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.php]
indent_style = space
indent_size = 4

# Matches the exact files either composer.json or .travis.yml
[{composer.json,.travis.yml}]
indent_style = space
indent_size = 2
